{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dispatcher View Track Layout",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "coordinateSystem": {
          "type": "string",
          "enum": ["cartesian2D", "geoJSON"]
        },
        "scale": { "type": "number" }
      },
      "required": ["version", "coordinateSystem"]
    },
    "tracks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "blocks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "blockId": { "type": "string" },
                "name": { "type": "string" },
                "length": { "type": "number" },
                "geometry": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "x": { "type": "number" },
                      "y": { "type": "number" },
                      "switchId": {
                        "$comment": "The presence of the switchId parameter indicates that that switch should be consulted for the next geometry point as the track may be diverging.",
                        "type": "string"
                      }
                    },
                    "required": ["x", "y"]
                  }
                },
                "direction": {
                  "type": "string",
                  "enum": ["bidirectional", "north", "south", "east", "west"]
                }
              },
              "required": ["blockId", "geometry"]
            }
          }
        },
        "required": ["id", "blocks"]
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "blockId": { "type": "string" },
          "position": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            },
            "required": ["x", "y"]
          },
          "state": {
            "type": "string",
            "enum": ["red", "yellow", "green", "off"]
          },
          "facing": {
            "type": "string",
            "enum": ["north", "south", "east", "west"]
          }
        },
        "required": ["id", "blockId", "position"]
      }
    },
    "switches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "connections": {
            "$comment": "Specifies which tracks are connected to the switch. The first two should always be the main tracks, and the remaining ones are the diverging tracks.",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "trackId": { "type": "string" },
                "blockId": { "type": "string" },
                "direction": {
                  "$comment": "The direction refers to if the xy at index -1 is the one that the switch is connecting to (false), or if it is index 0 (true).",
                  "type": "boolean"
                },
                "canGoWith": {
                  "$comment": "Which other lines it can be paired with, by their index in the connections array.",
                  "type": "array",
                  "items": { "type": "integer" }
                }
              },
              "required": ["trackId", "blockId", "direction", "canGoWith"]
            }
          },
          "state": {
            "$comment": "Specifies which two tracks are currently connected by the switch (given by the index in 'connections'). If undefined, just use index 0 and 1 as defined in 'connections'.",
            "type": "array",
            "items": { "type": "integer" },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "required": ["id", "connections"]
      }
    },
    "stations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "location": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            },
            "required": ["x", "y"]
          },
          "platforms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "platformId": { "type": "string" },
                "name": { "type": "string" },
                "trackId": { "type": "string" },
                "blockId": { "type": "string" },
                "positionAlongTrack": { "type": "number" },
                "side": {
                  "type": "string",
                  "enum": ["left", "right", "both"]
                },
                "length": { "type": "number" },
                "status": {
                  "type": "string",
                  "enum": ["active", "closed", "maintenance"]
                }
              },
              "required": ["platformId", "trackId", "blockId"]
            }
          }
        },
        "required": ["id", "name", "location"]
      }
    }
  },
  "required": ["metadata", "tracks", "stations"]
}
